              BackgroundColor="White">

    <Grid BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition Height=".10*"/>
            <RowDefinition Height=".75*"/>
        </Grid.RowDefinitions>
        <!--Información de usuario-->
        <Image Source="logo.png"/>
        <!--Calendario-->
