              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height=".08*"/>
                <RowDefinition Height=".92*"/>
            </Grid.RowDefinitions>
            <Grid BackgroundColor="Aqua">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Text="Atras"
                        HorizontalOptions="Center"/>
                <Label Text="Dia" 
