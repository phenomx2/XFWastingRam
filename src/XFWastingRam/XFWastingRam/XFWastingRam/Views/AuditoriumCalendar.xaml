                    <Label Text="L" Style="{StaticResource CalendarLabel}"/>
                    <BoxView Grid.Row="1" x:Name="MondayCell1"/>
                    <BoxView Grid.Row="2" x:Name="MondayCell2"/>
                    <BoxView Grid.Row="3" x:Name="MondayCell3"/>
                    <BoxView Grid.Row="4" x:Name="MondayCell4"/>
