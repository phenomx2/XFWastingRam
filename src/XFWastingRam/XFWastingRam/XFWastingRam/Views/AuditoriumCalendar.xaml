                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
                <Button Text="Adelante"
                       Grid.Column="2"
                       HorizontalOptions="Center"/>
            </Grid>
            <Grid Grid.Row="1"
                  BackgroundColor="Beige">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid x:Name="Hours">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
